{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "paths": {
      "@presentation/*": ["presentation/*"],
      "@infra/*": ["infra/*"],
      "@domain/*": ["domain/*"],
      "@data/*": ["data/*"],
      "@factories/*": ["factories/*"],
      "@type/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"]
}
